print("Ingresa las coordenadas del primer punto:")
x1 = float(input("xâ‚ = "))
y1 = float(input("yâ‚ = "))

print("Ingresa las coordenadas del segundo punto:")
x2 = float(input("xâ‚‚ = "))
y2 = float(input("yâ‚‚ = "))

# CÃ¡lculo de la pendiente (m)
if x1 == x2:
    print("âŒ Error: Los puntos tienen la misma coordenada x (recta vertical)")
    print("La pendiente es indefinida y no se puede calcular la ecuaciÃ³n y = mx + b")
else:
    m = (y2 - y1) / (x2 - x1)  # Pendiente
    
    # CÃ¡lculo del intercepto (b) usando y = mx + b â†’ b = y - mx
    b = y1 - m * x1
    
    print(f"\n Pendiente (m): {m:.2f}")
    print(f" Intercepto (b): {b:.2f}")
    
    # Formatear la ecuaciÃ³n de manera mÃ¡s legible
    signo_b = "+" if b >= 0 else "-"
    b_abs = abs(b)
    
    print(f"ðŸ§® EcuaciÃ³n de la recta: y = {m:.2f}x {signo_b} {b_abs:.2f}")
    
    # Mostrar ecuaciÃ³n con valores exactos si son enteros
    if m.is_integer() and b.is_integer():
        print(f"           (forma exacta): y = {int(m)}x {signo_b} {int(b_abs)}")
